<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CA5656"
    tools:context=".activity.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CA5656"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:hint=" Name (Min 20 characters)"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/appBar"
        android:drawableLeft="@drawable/person"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint=" Email address"
        android:layout_below="@+id/etName"
        android:drawableLeft="@drawable/email"/>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:hint=" Mobile number (10 digits)"
        android:layout_below="@+id/etEmail"
        android:drawableLeft="@drawable/phone_icon"/>

    <EditText
        android:id="@+id/etDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:hint=" Delivery address"
        android:layout_below="@+id/etMobileNumber"
        android:drawableLeft="@drawable/address"/>

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint=" Password (Min 6 characters)"
        android:layout_below="@+id/etDeliveryAddress"
        android:drawableLeft="@drawable/password_icon"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint=" Confirm password"
        android:layout_below="@+id/etRegisterPassword"
        android:drawableLeft="@drawable/password_icon"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/etConfirmPassword"
        android:background="#800F0F"
        android:text="Register"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"/>

</RelativeLayout>